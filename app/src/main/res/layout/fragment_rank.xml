<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RankFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@color/colorWhite"
        android:src="@drawable/ranking" />


    <ScrollView
        android:id="@+id/rankScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ff000000">

        <LinearLayout
            android:id="@+id/rankLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/rankP1"
                layout="@layout/rank_component"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="1dp" />

            <include
                android:id="@+id/rankP2"
                layout="@layout/rank_component"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="1dp" />

            <include
                android:id="@+id/rankP3"
                layout="@layout/rank_component"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="1dp" />

            <include
                android:id="@+id/rankP4"
                layout="@layout/rank_component"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="1dp" />

            <include
                android:id="@+id/rankP5"
                layout="@layout/rank_component"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="1dp" />

            <include
                android:id="@+id/rankP6"
                layout="@layout/rank_component"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="1dp" />

            <include
                android:id="@+id/rankP7"
                layout="@layout/rank_component"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="1dp" />

            <include
                android:id="@+id/rankP8"
                layout="@layout/rank_component"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="1dp" />

            <include
                android:id="@+id/rankP9"
                layout="@layout/rank_component"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="1dp" />

            <include
                android:id="@+id/rankP10"
                layout="@layout/rank_component"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="1dp" />

        </LinearLayout>

    </ScrollView>

    <TextView
        android:text="MY_RANK"
        android:gravity="center"
        android:textStyle="italic"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/myRank"
        layout="@layout/rank_component"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"/>

</LinearLayout>