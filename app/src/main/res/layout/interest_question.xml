            android:background="@color/colorWhite"
            android:text="0"
            android:textSize="10sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:background="@color/colorWhite"
            android:text="0"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>